<UserControl x:Class="Referrals_project.ReferralControls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Referrals_project"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="Labels"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Main Grid Area-->
        <TextBlock Grid.Column="0" Grid.Row ="0" VerticalAlignment="Center" Text="Referral Rewards Plugin" FontWeight="Bold" FontSize="16" Grid.ColumnSpan="2" Margin="5"/>
        
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Referral Rewards Enabled" Margin="5" />
            <CheckBox x:Name="ReferralRewardsEnabled" VerticalAlignment="Center" Margin="5" IsChecked="{Binding Path=ReferralRewardsEnabled}"/>
        </StackPanel>
        
        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal">
            <TextBlock  VerticalAlignment="Center" Text="Promotion Rewards Enabled" Margin="5"/>
            <CheckBox x:Name="PromotionRewardEnabled" HorizontalAlignment="Left" Grid.ColumnSpan="1" Margin="5" IsChecked="{Binding PromotionRewardEnabled}"/>
        </StackPanel>
        
        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal">
            <TextBlock  VerticalAlignment="Center" Text="Server Referral Code" Margin="5"/>
            <TextBox x:Name="ServerReferralCode" MinWidth="120" MaxWidth="120"  VerticalAlignment="Stretch" Margin="5" Text="{Binding ServerReferralCode}"/>
        </StackPanel>
        
        <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal">
            <TextBlock  VerticalAlignment="Center" Text="Promotion Rewards Code" Margin="5"/>
            <TextBox x:Name="PromotionRewardsCode" MinWidth="120" MaxWidth="120"  VerticalAlignment="Stretch" Margin="5" Text="{Binding PromotionRewardsCode}"/>
        </StackPanel>
        
        <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal" Grid.ColumnSpan="4">
            <Button  Content="Server Referral Reward Config" Margin="5" Click="ServerReferralRewardConfigButton_OnClick" />
            <Button  Content="User Referral Reward Config" Margin="5" Click="UserReferralRewardConfigButton_OnClick" />
            <Button  Content="Promotion Reward Config" Margin="5" Click="PromotionCodeRewardConfigButton_OnClick" />
        </StackPanel>
        
        <!--Left Grid area Webserver enabled -->
        <Grid x:Name="ReferralDataGrid" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="4">
            <DataGrid Name = "DataGrid" AlternatingRowBackground = "Gray" AlternationCount = "2" AutoGenerateColumns = "True" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Player Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Referred By Player" Binding="{Binding ReferralByUser}"/>
                    <DataGridTextColumn Header="Referred By Code" Binding="{Binding ReferralByCode}"/>
                    <DataGridTextColumn Header="Player Steam Id" Binding="{Binding SteamId}"/>
                    <DataGridTextColumn Header="Referred By" Binding="{Binding ReferredBy}" />
                    <DataGridTextColumn Header="Referral Code" Binding="{Binding ReferralCode}"/>
                    <DataGridComboBoxColumn>
                        
                    </DataGridComboBoxColumn>
                    <!--<DataGridComboBoxColumn Header="Referred Data" TextBinding="{Binding ReferredDescriptions}">
                        
                    </DataGridComboBoxColumn>-->
                </DataGrid.Columns>
            </DataGrid>    
        </Grid>
    </Grid>
</UserControl>
